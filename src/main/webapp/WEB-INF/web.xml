<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
	<servlet>
		<servlet-name>UserRegister</servlet-name>
		<servlet-class>www.project.controller.UserRegisterController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UserLogin</servlet-name>
		<servlet-class>www.project.controller.UserLoginController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FetchServlet</servlet-name>
		<servlet-class>www.project.controller.FetchServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogOutServlet</servlet-name>
		<servlet-class>www.project.controller.LogOutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SendmsgServlet</servlet-name>
		<servlet-class>www.project.controller.SendmsgServlet</servlet-class>
	</servlet>
    <servlet>
        <servlet-name>AddFriendServlet</servlet-name>
        <servlet-class>www.project.controller.AddFriendServlet</servlet-class>
    </servlet>

    <servlet-mapping>
		<servlet-name>UserRegister</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>UserLogin</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>LogOutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>FetchServlet</servlet-name>
		<url-pattern>/fetch</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>SendmsgServlet</servlet-name>
		<url-pattern>/sendmsg</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>AddFriendServlet</servlet-name>
		<url-pattern>/addfriend</url-pattern>
	</servlet-mapping>

</web-app>